[core]
  excludesfile = /Users/scott/.gitignore

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    st = status
    ci = commit
    co = checkout
    re = rebase
    undo = reset --soft HEAD^
    copr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -

[push]
    default = current
